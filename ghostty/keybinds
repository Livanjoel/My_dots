# KEYBINDS
keybind = performable:ctrl+c=copy_to_clipboard
keybind = performable:ctrl+v=paste_from_clipboard
# Tabs management
# keybind = performable:ctrl+space>right=next_tab
# keybind = performable:ctrl+space>left=previous_tab
keybind = performable:ctrl+a=new_tab
keybind = performable:ctrl+q=close_surface
# Splts management
# News
keybind = performable:ctrl+alt+right=new_split:right
keybind = performable:ctrl+alt+left=new_split:left
keybind = performable:ctrl+alt+down=new_split:down
# Goto split
keybind = performable:alt+right=goto_split:right
keybind = performable:alt+left=goto_split:left
keybind = performable:alt+up=goto_split:up
keybind = performable:alt+down=goto_split:down
# Resize
keybind = performable:ctrl+shift+down=resize_split:down,10
keybind = performable:ctrl+shift+up=resize_split:up,10
keybind = performable:ctrl+shift+right=resize_split:right,10
keybind = performable:ctrl+shift+left=resize_split:left,10
# Zoom screen and font
keybind = performable:alt+f=toggle_split_zoom

# Quick Terminal
#FIX: Dont do nothing
# keybind = perfomable:space>t=toggle_quick_terminal



##Ignore this defaults keybind
keybind = global:ctrl+shift+o=ignore
keybind = global:ctrl+shift+n=ignore
keybind = global:ctrl+shift+up=ignore
